<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_pelatihan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toLeftOf="@id/fab_add_pelatihan">

                <EditText
                    android:id="@+id/et_pelatihan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:focusable="false"
                    android:hint="@string/pelatihan_HMI"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textColor="?attr/textcolor" />

                <EditText
                    android:id="@+id/et_tahun_pelatihan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:focusable="false"
                    android:hint="@string/tahun"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textColor="?attr/textcolor" />

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_add_pelatihan"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_add_primary"
                app:backgroundTint="@color/colorBgWhite"
                app:borderWidth="0dp"
                app:elevation="2dp"
                app:fabCustomSize="35dp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pendidikan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toLeftOf="@id/fab_add_pendidikan">

                <EditText
                    android:id="@+id/et_tahun_pendidikan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="@string/tahun"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textColor="?attr/textcolor" />

                <EditText
                    android:id="@+id/et_strata"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="@string/strata"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textColor="?attr/textcolor"/>

                <EditText
                    android:id="@+id/et_institusi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:focusable="false"
                    android:hint="@string/nama_institusi"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textColor="?attr/textcolor" />

                <EditText
                    android:id="@+id/et_jurusan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="@string/jurusan"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textColor="?attr/textcolor" />

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_add_pendidikan"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_add_primary"
                app:backgroundTint="@color/colorBgWhite"
                app:borderWidth="0dp"
                app:elevation="2dp"
                app:fabCustomSize="35dp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.LeaderFormActivity">

    <include layout="@layout/header_layout"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:padding="16dp"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <TextView
                    android:textColor="?attr/textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tambah_ketua_umum_ket"
                    android:textSize="11sp"/>

                <EditText
                    android:textColor="?attr/textcolor"
                    android:longClickable="false"
                    android:focusable="false"
                    android:id="@+id/et_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nasional"/>

                <EditText
                    android:textColor="?attr/textcolor"
                    android:longClickable="false"
                    android:focusable="false"
                    android:id="@+id/et_nama_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PB HMI" />

                <EditText
                    android:textColor="?attr/textcolor"
                    android:longClickable="false"
                    android:id="@+id/et_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nama_ketua_umum" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <EditText
                        android:textColor="?attr/textcolor"
                        android:longClickable="false"
                        android:id="@+id/et_periode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/periode_ketua_umum"/>

                    <EditText
                        android:textColor="?attr/textcolor"
                        android:longClickable="false"
                        android:id="@+id/et_sampai"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/sampai_ketua_umum" />
                </LinearLayout>

                <TextView
                    android:textColor="?attr/textcolor"
                    android:id="@+id/tv_ket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/unggah_foto"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:padding="8dp"
                        android:id="@+id/img_foto"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_image"
                        android:background="@drawable/rectangle_dash_line"/>

                    <TextView
                        android:textColor="?attr/textcolor"
                        android:id="@+id/tv_maks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:text="@string/maks_foto"/>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_simpan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:backgroundTint="?attr/colorPrimary"
                    android:text="@string/simpan"
                    android:textColor="@android:color/white"
                    android:layout_gravity="right"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>